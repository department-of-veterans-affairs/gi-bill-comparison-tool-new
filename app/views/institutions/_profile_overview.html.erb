			<% if @school.in_usa? %>
				<p><%= @school.city %>, <%= @school.state %></p>
			<% else %>
				<p><%= @school.city %>, <%= @school.country %></p>
			<% end %>
		</div>

		<!-- Holds student attendance and link -->
        
        	       <p>
	      	<span class="gi-bill-student-count"><%= @school.gibill %>&nbsp;</span><a id="gi-bill-students-info" rel="leanModal" name="status" href="#gibillstudents"><span class="programs-text">GI Bill Students</span></a>
