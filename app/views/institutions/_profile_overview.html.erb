<div id="profile-summary" class=" print-width">
  <div class="row mobile-padding">
      <div class="small-12 columns nopadding">
      			<% if @school.caution_flag %>
				<div class="caution-profile">
					<%
						caution = '<i id="caution-jump-flag-con" class="fa fa-exclamation-triangle"></i>&nbsp'.html_safe
